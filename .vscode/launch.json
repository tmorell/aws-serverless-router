{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--coverage",
                "false",
                "--config",
                "${workspaceRoot}/jest.config.ts",
                "--runInBand"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/lib/**/*"
            ]
        }        
    ]
}
